  "shortcuts": [
    {
      "name": "Create Room",
      "short_name": "Create",
      "description": "Create a new sharing room",
      "url": "/?action=create",
      "icons": [{ "src": "/icons/create-shortcut.png", "sizes": "96x96" }]
    },
    {
      "name": "Join Room",
      "short_name": "Join",
      "description": "Join an existing room",
      "url": "/?action=join",
      "icons": [{ "src": "/icons/join-shortcut.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["*/*"]
        }
      ]
    }
